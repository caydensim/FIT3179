{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/caydensim/FIT3179/main/sport_db.csv"
  },
  "transform": [
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Number of Participants", "order": "descending"}]
    },
    {"filter": "datum.rank <=8"}
  ],
  "encoding": {
    "x": {
      "field": "Sport",
      "type": "nominal",
      "title": "Sports",
      "sort": {"order": "descending"}
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {"y": {"field": "Total Medals", "type": "quantitative"}}
    },
    {
      "mark": {"type": "bar", "color": "yellow", "opacity": 0.5},
      "encoding": {
        "y": {"field": "Number of Participants", "type": "quantitative"}
      }
    }
  ],
  "config": {}
}