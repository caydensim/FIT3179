{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Olympic Medals Won by Country",
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://caydensim.github.io/FIT3179/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/caydensim/FIT3179/main/country_medals.csv"
        },
        "key": "Team",
        "fields": ["Total"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {"field": "Total", "type": "quantitative"},
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Total", "type": "quantitative"}
    ]
  },
  "config": {}
}